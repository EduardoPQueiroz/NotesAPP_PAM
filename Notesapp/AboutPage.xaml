<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notesapp.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="pedrada.gif"
                   SemanticProperties.Description="Macaco gigantesco jogando pedras no usuário."
                   HeightRequest="160"
                   />
            <Label FontSize="22" FontAttributes="Bold" Text="NotesApp"
                   VerticalOptions="End"/>
            <Label FontSize="22" Text="v1.0" VerticalOptions="End"/>

        </HorizontalStackLayout>
        
        <Label 
            Text="Essa aplicação foi desenvolvida com o objetivo de levar o usuário a transformadora experiência de receber uma pedrada em sua cabeça."/>
        <Button Text="Receba Mais informação na sua cabeça!" Clicked="LearnMore_cliked"/>

    </VerticalStackLayout>
        
</ContentPage>